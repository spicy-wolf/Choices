{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@resources/*": [
        "resources/*"
      ]
    },
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}